{
  "name": "video-downloader",
  "version": "1.5",
  "description": "Video ve Ses İndirici",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "Melih Tunç",
  "license": "ISC",
  "dependencies": {
    "electron": "^35.0.1",
    "tree-kill": "^1.2.2"
  },
  "devDependencies": {
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.video.downloader",
    "productName": "Media İndirme Aracı",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "bin/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "files": [
      "**/*",
      "!bin/*"
    ],
    "extraResources": [
      {
        "from": "bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
